@page "/"
@model ContatosApp.Pages.IndexModel

@{
    ViewData["Title"] = "Contatos";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Cabeçalho com Estatísticas -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <div class="flex items-center space-x-4">
                        <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-4 rounded-2xl shadow-lg">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-indigo-700 bg-clip-text text-transparent">
                                Meus Contatos
                            </h1>
                            <p class="text-gray-600 mt-1">
                                Total: <span class="font-bold text-gray-800">@Model.Contacts.Count()</span> contato(s)
                            </p>
                        </div>
                    </div>
                </div>
                
                <a asp-page="/Contacts/Create" 
                   class="bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 focus:ring-offset-white">
                    <span class="flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Novo Contato
                    </span>
                </a>
            </div>
        </div>

        <!-- Mensagem de Nenhum Contato -->
        @if (!Model.Contacts.Any())
        {
            <div class="bg-white rounded-2xl shadow-xl p-12 text-center border-2 border-dashed border-gray-200">
                <div class="inline-flex items-center justify-center p-6 bg-blue-100 rounded-full mb-6">
                    <svg class="w-16 h-16 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-3">Nenhum contato cadastrado</h3>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                    Parece que você ainda não tem nenhum contato na sua agenda. 
                    Clique no botão abaixo para adicionar seu primeiro contato!
                </p>
                <a asp-page="/Contacts/Create" 
                   class="bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200">
                    <span class="flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Adicionar Primeiro Contato
                    </span>
                </a>
            </div>
        }
        else
        {
            <!-- Lista de Contatos - Cards Modernos -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var c in Model.Contacts)
                {
                    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                        <!-- Cabeçalho do Card -->
                        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5 border-b border-gray-200">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-lg font-bold text-gray-800 truncate">@c.Name</h3>
                                        <p class="text-xs text-gray-500 mt-0.5">ID: #@c.Id</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Corpo do Card -->
                        <div class="px-6 py-5 space-y-4">
                            <!-- Telefone -->
                            <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-lg">
                                <div class="mt-1">
                                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-semibold text-gray-600 mb-1">Telefone</div>
                                    <div class="text-sm font-medium text-gray-900">
                                        <a href="tel:@c.Phone" class="hover:text-blue-600 transition-colors">
                                            @c.Phone
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-lg">
                                <div class="mt-1">
                                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div class="flex-1">
                                    <div class="text-xs font-semibold text-gray-600 mb-1">Email</div>
                                    <div class="text-sm font-medium text-gray-900 break-all">
                                        <a href="mailto:@c.Email" class="hover:text-blue-600 transition-colors">
                                            @c.Email
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Rodapé com Ações -->
                        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                            <div class="flex flex-col sm:flex-row gap-2">
                                <a asp-page="/Contacts/Details" asp-route-id="@c.Id" 
                                   class="flex-1 bg-white border border-gray-300 text-gray-700 font-medium py-2 px-4 rounded-lg hover:bg-gray-50 transition-colors text-center text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                    <span class="flex items-center justify-center">
                                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                        Ver
                                    </span>
                                </a>
                                
                                <a asp-page="/Contacts/Edit" asp-route-id="@c.Id" 
                                   class="flex-1 bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                    <span class="flex items-center justify-center">
                                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                        Editar
                                    </span>
                                </a>
                                
                                <form method="post" asp-page="/Contacts/Delete" asp-route-id="@c.Id" 
                                      onsubmit="return confirm('⚠️ ATENÇÃO\n\nVocê tem certeza que deseja excluir este contato?\n\nEsta ação não pode ser desfeita.');">
                                    <button type="submit" 
                                            class="flex-1 bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg transition-colors text-center text-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 w-full">
                                        <span class="flex items-center justify-center">
                                            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                            Excluir
                                        </span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Paginação (se necessário no futuro) -->
            @if (Model.Contacts.Count() > 9)
            {
                <div class="mt-8">
                    <div class="bg-white rounded-xl shadow-sm p-4">
                        <div class="flex items-center justify-center space-x-2">
                            <button class="px-4 py-2 bg-blue-500 text-white rounded-lg font-medium">1</button>
                            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200">2</button>
                            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200">3</button>
                            <span class="px-4 py-2 text-gray-500">...</span>
                            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200">10</button>
                        </div>
                    </div>
                </div>
            }
        }

        <!-- Rodapé Informativo -->
        <div class="mt-8 text-center">
            <div class="inline-flex items-center px-6 py-3 bg-white rounded-full shadow-md border border-gray-200">
                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm font-medium text-gray-700">
                    Total de contatos: <span class="font-bold text-blue-600">@Model.Contacts.Count()</span>
                </span>
            </div>
        </div>
    </div>
</div>